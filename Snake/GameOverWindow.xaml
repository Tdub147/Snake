<Window x:Class="Snake.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Game Over" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="20">
            Sorry
            </TextBlock>
            <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="20">
            Game Over!
            </TextBlock>
            <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="20">
            Your Score Was
            </TextBlock>
            <TextBlock x:Name="FinalScore" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold">
            20!
            </TextBlock>
            <Button x:Name="OK" Content="OK" Margin="20" Click="OK_Click"/>
        </StackPanel>


    </Grid>
</Window>
